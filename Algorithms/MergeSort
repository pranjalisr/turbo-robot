Class merge{
public static void mergeSort(int[] a, int n) {
    if (n < 2) {
        return;
    }
    int mid = n / 2;
    int[] left = new int[mid];
    int[] right = new int[n - mid];

    for (int i = 0; i < mid; i++) {
        left[i] = a[i];
    }
    for (int i = mid; i < n; i++) {
        right[i - mid] = a[i];
    }
    mergeSort(left, mid);
    mergeSort(right, n - mid);

    merge(a, left, right, mid, n - mid);
}
}
